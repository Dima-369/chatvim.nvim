{
  "name": "chatvim.nvim",
  "version": "0.3.0",
  "description": "AI chat with markdown files in Neovim.",
  "main": "stream.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/chatvim/chatvim.nvim.git"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
